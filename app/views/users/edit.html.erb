<h1>Editer mon profil</h1>

<%= form_for (@user) do |f|%>
  <div class="field">
    <%= f.label :Nom %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Prénom %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Adresse %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Sexe %><br />
     <%= f.select :is_female, [["Masculin", false], ["Féminin", true]] %>
  </div>

 <%= f.submit "Submit"  %> 
 <% end %>

